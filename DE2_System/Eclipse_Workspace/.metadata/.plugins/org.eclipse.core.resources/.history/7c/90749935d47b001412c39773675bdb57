#include "main.h"

int main(void)
{
	/* local vars */
	int i;

	/* init CRC registers */
	*CRC_CTRL = CRC_CTRL_MSK_EN;	//set enable bit
	*CRC_DWIDTH = 4;				// data will be written to SHIFT 4 bits at a time

	/* shift some data in */
	*CRC_SHIFT = 0x01;
	*CRC_SHIFT = 0x02;
	*CRC_SHIFT = 0x03;


	return 0;
}
